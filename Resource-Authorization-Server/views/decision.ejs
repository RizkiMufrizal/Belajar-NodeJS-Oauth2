<div class="jumbotron text-center">
  <h1>OAuth2 Approval</h1>
  <h3>Hi <%= user.username %></h3>
    <h3><%= client.name %> is requesting access to your account. Do you approve ? </h3>

    <form action="/decision" method="post">
      <input type="hidden" name="transaction_id" value="<%= transactionID %>">

      <input type="submit" class="btn btn-success" name="allow" id="allow" value="Allow">
      <input type="submit" class="btn btn-danger" name="cancel" id="deny" value="Deny">

    </form>

</div>
